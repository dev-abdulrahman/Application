@model Application.ViewModels.BorrowViewModel

@{
    ViewData["Title"] = "Borrow Book";
}

<div class="card">
    <div class="card-header">
        <strong>@Model.BookTitle</strong>
    </div>
    <div class="card-body">
        <form id="modalForm" method="post" class="needs-validation"
              data-ajax-url="@Url.Action(nameof(BorrowController.Create), nameof(BorrowController).Replace("Controller", ""))"
              data-table-refresh-url="@Url.Action(nameof(BooksController.GetBooksTable), nameof(BooksController).Replace("Controller", ""))">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="BookId" />
            @*  <input type="hidden" asp-for="BookTitle" /> *@

            <div class="mb-3">
                <label asp-for="BorrowerName" class="form-label"></label>
                <input asp-for="BorrowerName" class="form-control" required />
                <span asp-validation-for="BorrowerName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BorrowerEmail" class="form-label"></label>
                <input asp-for="BorrowerEmail" class="form-control" />
                <span asp-validation-for="BorrowerEmail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            @*  <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Confirm Borrow</button>
                <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Cancel</a> *@
        </form>
    </div>
</div>
